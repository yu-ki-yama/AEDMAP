<div class="admin_header">
  <%= link_to '投稿情報一覧', aed_information_managements_path,class: 'admin_header_list btn btn-primary' %>
  <%= link_to 'CSVインポート', csv_import_aed_information_managements_path, class: 'admin_header_import btn btn-primary' %>
</div>

<div class="import_form">
  <%= form_with url: aed_information_managements_path, local: true, method: :post do |form| %>
    <div class="form-group form-group-sm">
      <label class="file_select_label">CSVファイル選択</label>
      <div>
        <%= form.file_field :file_select, class: "form-control", style: "display:none" %>

        <div class="input-group file-select">
          <span class="input-group-btn">
            <button type="button" id="file_select_icon" class="btn btn-sm"><span class="glyphicon glyphicon-folder-open" aria-hidden="true" style="font-size: 30px"></span></button>
          </span>
          <input type="text" id="file_name" class="form-control" placeholder="Select file ..." readonly>
        </div>
      </div>
    </div>

    <div class="form-group form-group-sm">
      <div>
        <%= form.submit 'インポート', class: "import_submit btn-lg btn-sm btn-primary" %>
        <button type="button" class="btn-lg btn-sm btn-warning" id="btn_clear_file">クリア</button>
      </div>
    </div>
  <% end %>
</div>

